[Unit]
Description=Innovációs Ösztöndíj 2020
After=network.target mongod.service
Requires=mongod.service
AssertPathExists=$DIRECTORY/back

[Service]
Type=simple
ExecStart=/usr/bin/npm start
WorkingDirectory=$DIRECTORY/back
Restart=always
RestartSec=60
Environment=NODE_ENV=production PORT=80 GMAIL_ADDRESS=$USER GMAIL_PASSWORD=$PASSWORD

[Install]
WantedBy=multi-user.target
